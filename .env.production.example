# Helix System - Production Environment Configuration

# ======================
# FRONTEND ENVIRONMENT
# ======================
# Copy to frontend/.env.production

VITE_API_URL=https://api.helix-system.com
VITE_ICP_CANISTER_ID=rdmx6-jaaaa-aaaaa-aaadq-cai
VITE_INTERNET_IDENTITY_URL=https://identity.ic0.app
VITE_DFX_NETWORK=ic
VITE_ENVIRONMENT=production

# ======================
# BACKEND ENVIRONMENT
# ======================
# Copy to backend/.env

# Database
DATABASE_URL=postgresql://username:password@hostname:5432/helix_production
REDIS_URL=redis://redis-server:6379/0

# Security
SECRET_KEY=your-super-secret-key-here-change-this
JWT_SECRET_KEY=another-secret-key-for-jwt-tokens
CORS_ORIGINS=https://helix-system.com,https://www.helix-system.com

# ICP Configuration
ICP_CANISTER_ID=rdmx6-jaaaa-aaaaa-aaadq-cai
ICP_NETWORK=ic
INTERNET_IDENTITY_URL=https://identity.ic0.app

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=helix-file-storage
AWS_REGION=us-east-1

# ======================
# DOCKER ENVIRONMENT
# ======================
# For containerized deployment

COMPOSE_PROJECT_NAME=helix
POSTGRES_DB=helix_production
POSTGRES_USER=helix_user
POSTGRES_PASSWORD=secure_password_here
REDIS_PASSWORD=redis_password_here

